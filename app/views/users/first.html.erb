<div class="firstShow">
		<div id="block">
      <div id="title">
  		<h1><b>Tech.Match</b></h1>
      </div>   
		<p>
		Log into Tech.Match
		</p>
    <div class="button1">
		  <p>
    	<%= link_to 'New Account', sign_up_path , class: "btn btn-default btn-lg btn-block" %>
  		</p>
  		<p>
    	<%= link_to 'Log In Now', sign_in_path , class: "btn btn-default btn-lg btn-block" %>
  		</p>
      </div>
  		</div>
      <hr/>
      <div id="user-widget">
  <% if current_userf %>
    Welcome <strong><%= current_userf.name %></strong>!
    <%= link_to "Sign out", signout_path, id: "sign_out" %>
  <% else %>
    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>

  <% end %>
</div>
<% if current_userf %>
<br/>

  <%= image_tag current_userf.info["info"]["image"], class: "prof_pic" %>
 
<% end %>
</div>
  
